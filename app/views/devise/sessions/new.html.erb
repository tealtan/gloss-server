<div class="border-wrapper">

<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %>
  <%= f.email_field :email, :placeholder => "Email", :autofocus => true %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password, :placeholder => "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "user_remember_me" %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<div class="inline-secondary-links">
  <%= render "devise/shared/links" %>
</div>

</div>